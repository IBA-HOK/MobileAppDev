<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="16sp"
        android:text="もちもの"
        android:textSize="16sp"

        ></TextView>
    <!-- チェックリストのアイテム 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8sp">

        <TextView
            android:id="@+id/item1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="項目1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/homeactivity_button"
            android:textColor="@color/white"
            android:text="もった!" />
    </LinearLayout>

    <!-- チェックリストのアイテム 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8sp">

        <TextView
            android:id="@+id/item2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="項目2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="#b0cde5"
            android:text="もった!" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8sp">

        <TextView
            android:id="@+id/item3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="項目3"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#b0cde5"
            android:text="もった!" />
    </LinearLayout>

    <!-- 天気予報セクションのタイトル -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="8sp"
        android:text="時間ごとの天気"
        android:textSize="16sp" />

    <!-- 横スクロール天気セクション -->
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 天気情報アイテム 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00 PM"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/imageWeatherIcon1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_sunny" />

                <TextView
                    android:id="@+id/textTemperature1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25°C"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- 天気情報アイテム 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:00 PM"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/imageWeatherIcon2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_cloudy" />

                <TextView
                    android:id="@+id/textTemperature2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22°C"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- 天気情報アイテム 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:00 PM"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/imageWeatherIcon3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_rainy" />

                <TextView
                    android:id="@+id/textTemperature3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20°C"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 追加のチェックリストアイテムも同様に作成可能 -->

</LinearLayout>
